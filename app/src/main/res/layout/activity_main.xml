<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:centerColor="#63B8FF"
    android:startColor="#7EC0EE"
    android:endColor="#5CACEE"
    tools:context="com.example.joesp.aidiary.MainActivity">

    <TextView
        android:id="@+id/txtAIDiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="@string/ai_diary"
        android:layout_above="@+id/imageView6"
        android:layout_alignLeft="@+id/txtViewOpenDiaryEntry"
        android:layout_alignStart="@+id/txtViewOpenDiaryEntry" />

    <TextView
        android:id="@+id/txtViewCurrentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_date"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnVideoDiary"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/video_diary"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/txtViewCurrentDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnWriteDiary"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        tools:layout_editor_absoluteY="242dp"
        tools:layout_editor_absoluteX="114dp"
        android:text="@string/write_diary"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_above="@+id/txtViewOpenDiaryEntry"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txtViewOpenDiaryEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/open_diary_entry"
        android:layout_below="@+id/btnVideoDiary"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnFindDiary"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/find_diary"
        android:layout_below="@+id/txtViewOpenDiaryEntry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


    <ImageView
        android:id="@+id/imageView6"
        android:contentDescription="@string/ai_diary"
        android:layout_width="209dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/aithinking"
        android:layout_above="@+id/txtViewCurrentDate"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
